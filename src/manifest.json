{
    "name": "Clear site data",
    "version": "0.0.1",
    "description": "Browser extension to clear site data",
    "author": "Nuno Faria",
    "homepage_url": "https://github.com/nunofaria11/close-other-tabs-ext",
    "manifest_version": 2,
    "permissions": [
        "contextMenus",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "main.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/eraser_16.png",
            "32": "icons/eraser_32.png",
            "64": "icons/eraser_64.png"
        }
    },
    "icons": {
        "16": "icons/eraser_16.png",
        "32": "icons/eraser_32.png",
        "64": "icons/eraser_64.png"
    }
}